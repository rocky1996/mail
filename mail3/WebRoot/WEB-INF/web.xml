<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ShowEmail</servlet-name>
    <servlet-class>com.cal.web.ShowEmail</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ShowSucServlet</servlet-name>
    <servlet-class>com.cal.web.ShowSucServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>ShowEmail</servlet-name>
    <url-pattern>/servlet/ShowEmail</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowSucServlet</servlet-name>
    <url-pattern>/servlet/ShowSucServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>servlet/ShowEmail</welcome-file>
  </welcome-file-list>
</web-app>